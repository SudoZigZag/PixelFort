# PixelFort Production Configuration
# Copy this to .env before deployment

# Application
APP_NAME=pixelfort
ENVIRONMENT=production

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Logging (WARNING or ERROR for production)
LOG_LEVEL=WARNING

# Database
DATABASE_URL=sqlite:///./storage/db/pixelfort.db

# Storage
STORAGE_PATH=/app/storage/photos

# Security (TODO: Add authentication)
# SECRET_KEY=generate-a-secure-random-key-here
# ALLOWED_HOSTS=your-domain.com,192.168.1.100